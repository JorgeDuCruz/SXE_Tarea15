<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="cafe_al_fallo.list">
      <field name="name">cafe_al_fallo list</field>
      <field name="model">cafe_al_fallo.cafe_al_fallo</field>
      <field name="arch" type="xml">
        <list>
          <field name="Alumno"/>
          <field name="nivel_sueno"/>
          <field name="bebida_recomendada"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="cafe_al_fallo.action_window">
      <field name="name">cafe_al_fallo window</field>
      <field name="res_model">cafe_al_fallo.cafe_al_fallo</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="cafe_al_fallo.action_server">
      <field name="name">cafe_al_fallo server</field>
      <field name="model_id" ref="model_cafe_al_fallo_cafe_al_fallo"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="cafe_al_fallo" id="cafe_al_fallo.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="cafe_al_fallo.menu_1" parent="cafe_al_fallo.menu_root"/>
    <menuitem name="Menu 2" id="cafe_al_fallo.menu_2" parent="cafe_al_fallo.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="cafe_al_fallo.menu_1_list" parent="cafe_al_fallo.menu_1"
              action="cafe_al_fallo.action_window"/>
    <menuitem name="Server to list" id="cafe_al_fallo" parent="cafe_al_fallo.menu_2"
              action="cafe_al_fallo.action_server"/>

  </data>
</odoo>
